@using JxAudio.TransVo

<ListGroup TItem="TrackVo" Items="TrackVos" Value="SelectedTrack" ValueChanged="SelectedTrackChanged" GetItemDisplayText="GetItemDisplayText">
</ListGroup>

@code {
    [Parameter]
    public List<TrackVo>? TrackVos { get; set; }

    [Parameter]
    public TrackVo? SelectedTrack { get; set; }

    [Parameter]
    public EventCallback<TrackVo> SelectedTrackChanged { get; set; }

    private string GetItemDisplayText(TrackVo arg)
    {
        return $"{(arg.Title ?? "未知歌曲")} - {(arg.ArtistName ?? "未知歌手")}";
    }

}